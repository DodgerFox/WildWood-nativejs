body
	position relative
	min-width 320px
	width 100%
	color #1c1c1c
	font-weight 400
	transition 1s background
	background-color white
	// -webkit-font-smoothing none
  // -webkit-tap-highlight-color rgba(0, 0, 0, 0)

	&.fixed
		overflow hidden


html
	font-family Montserrat, Arial, sans-serif
	font-size 62.5%
	line-height 1.4
	letter-spacing 0
	min-width 320px
	margin-left auto
	margin-right auto



.wrap
	position relative
	padding 0 30px
	width 100%
	margin-left auto
	margin-right auto
	max-width 828px
	+to-width(767px)
		padding 0 15px


.main
	display flex
	min-height 100vh
	max-height 100vh
	overflow hidden
	position relative
	padding-left 75px

.hidden
	opacity 0!important
	pointer-events none!important