.comments
    padding-bottom 60px

    &-center
        width 100%
        max-width 820px
        padding 0 40px
        padding-top 140px
        margin 0 auto

    &-header
        padding-bottom 40px
        font-size 28px
        font-weight bold
        letter-spacing 1px
        color #22212c

        span
            color #b2b2b2
            margin-left 20px
    
    &-new
        display flex
    
    &-wrap
        width 100%
        position relative
    
    &__avatar
        width 65px
        min-width 65px
        height 65px
        border-radius 50%
        background-color #f0f0f0
        margin-right 25px
        background-size cover
        background-position top center
    
    &__textarea
        width 100%
        height 60px
        margin-top 2px
        border-radius 20px
        border 1px solid #cdcdcd
        font-size 20px
        line-height 24px
        padding 0 18px
        padding-right 45px
        padding-top 18px
        color #b2b2b2
    
    &__send
        position absolute
        right 20px
        top 20px
        width 26px
        height 26px
        background-color transparent
        color transparent
        border none
        background-image url('../images/icon_plane.svg')
        background-size cover
    
    &__image
        padding-left 16px
        input
            position absolute
            opacity 0

            & + label
                font-size 14px
                color #b2b2b2
                position relative
                padding-left 40px
                display block
                margin-top 14px
                cursor pointer
                t()

                &:before
                    content ''
                    width 27px
                    height 25px
                    position absolute
                    left 0
                    top -7px
                    background-image url('../images/icon_photo.svg')
                    background-size cover
    
    &-item
        display flex
        margin-top 30px

        &__name
            color #22212c
            font-size 18px
            font-weight 600
        
        &__date
            color #9c9c9c
            font-size 12px
        
    &-text
        color #22212c
        font-size 14px
        line-height 22px
        a
            color $blue
    
    &-up
        display flex
        justify-content space-between
        align-items flex-end
        padding-bottom 10px
        margin-top 5px
    
    &-panel
        flex()
        align-items center
        margin-top 4px
    
    &-ask
        margin-right 20px
        color #9c9c9c
        font-size 12px
        cursor pointer
        t()
        &:hover
            color $blue

.emoji
    flex()

    &-item
        display flex
        align-items center
        padding 5px 8px
        border-radius 10px
        cursor pointer
        margin 0 5px
        t()
        &:hover
            background-color #f3f3f3
        &.active
            background-color #DBFDF3
        img
            width 21px
            min-width 21px
            pointer-events none

        p
            font-size 14px
            font-weight 500
            color #4d4d51
            margin-left 6px
            pointer-events none
    
    &-add
        border 1px solid #cccccc
        border-radius 10px
        height 27px
        width 27px
        margin-top 2px
        cursor pointer
        position relative
        center()
        img
            max-width 15px
            pointer-events none
        
        &:active
            .emoji-pack
                opacity 1
                pointer-events all
        &.active
            .emoji-pack
                opacity 1
                pointer-events all
    
    &-pack
        flex()
        width 100%
        min-width 188px
        position absolute
        background-color white
        padding 5px 0
        border-radius 15px
        bottom 40px
        right 0
        box-shadow 0 0px 40px #c2c2c2
        opacity 0
        pointer-events none
        t()
        .emoji-item
            min-width 37px
    