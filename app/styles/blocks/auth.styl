.auth
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    background-color white
    z-index 11
    pointer-events none
    opacity 0
    center()
    t()
    &.open
        pointer-events all
        opacity 1

    .wrap
        max-width 500px

    &-container
        background white
        width 100%
        border-radius 30px
        text-align center
    
    &-title
        font-size 24px
        font-weight 500
        padding-bottom 10px
    
    &-text
        font-size 16px
        font-weight 400
        padding-bottom 20px
        color #7f7f7f
    
    &-close
        position absolute
        right 60px
        top 60px
        cursor pointer
        img
            width 40px
            pointer-events none
    
    &-link
        position absolute
        right 60px
        bottom 60px
        font-size 20px
        font-weight 500
        color $sea
        text-transform uppercase
        cursor pointer
        t()
    
    &-form
        display flex
        flex-direction column
        align-items center
        margin-top 20px

        &__input
            background-color #f0f0f0
            border-radius 100px
            margin-bottom 15px
            padding 14px 20px
            font-size 16px
            font-weight 600
            text-align center
            width 100%
            border none
            color #333
            +placeholder()
                font-weight 500
                color #777
            &.invalid
                background-color #ff8484
        
        &__checkbox
            position relative
            margin 8px 0
            input
                position absolute
                opacity 0

                + label
                    font-size 12px
                    padding-left 30px
                    text-align left
                    line-height 18px
                    position relative
                    a
                        color $blue

                    &:after
                        content ''
                        position absolute
                        height 16px
                        width 16px
                        border-radius 5px
                        background-color #f0f0f0
                        left 0
                        top 0px
        


        
        &__button
            padding 14px 20px
            border-radius 100px
            border none
            font-size 16px
            color white
            font-weight 500
            text-transform uppercase
            background-color $orange
            letter-spacing 1px
            width 100%
            max-width 200px
            margin-top 10px
