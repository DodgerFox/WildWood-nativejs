.article
  width 65%
  &-header
    width 100%
    height 284px
    background-size cover
    background-position top center
    border-bottom 5px solid #52a3ca
    display flex
    justify-content center
    align-items flex-end

  .mCSB_inside > .mCSB_container
    margin-right 0
.author
  margin-bottom -100px
  &__avatar
    width 160px
    height 160px
    border-radius 50%
    background-size cover
    background-position top center
    border 5px solid white
    position relative

  &-name
    font-size 18px
    font-weight 600
    color #22212c
    text-align center
    margin-top 10px

  &-cat
    position absolute
    &__item
      width 40px
      height 40px
      border-radius 50%
      border 2px solid white
      &.snowboard
        background-color #52a3ca
      &.skateboard
        background-color #fd9e80
      &.ski
        background-color #5d55ad
